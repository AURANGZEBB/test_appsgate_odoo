<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- List View -->
    <record id="view_customer_group_tree" model="ir.ui.view">
        <field name="name">customer.group.tree</field>
        <field name="model">customer.group</field>
        <field name="arch" type="xml">
            <list string="Customer Groups">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customer_group_form" model="ir.ui.view">
        <field name="name">customer.group.form</field>
        <field name="model">customer.group</field>
        <field name="arch" type="xml">
            <form string="Customer Group">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_button" 
                               options="{'terminology': 'archive'}"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. VIP Customers"/>
                        </h1>
                    </div>
                    <group>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customer_group" model="ir.actions.act_window">
        <field name="name">Customer Groups</field>
        <field name="res_model">customer.group</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer group
            </p>
            <p>
                Create customer groups to organize customers for targeted discount rules.
                Each group can have specific discount rules applied to them.
            </p>
        </field>
    </record>

</odoo>