<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Wizard Form View -->
    <record id="view_sales_profitability_wizard" model="ir.ui.view">
        <field name="name">sales.profitability.wizard.form</field>
        <field name="model">sales.profitability.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Profitability Report">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="company_id" invisible="1"/>
                            Sales Profitability Analysis
                        </h1>
                        <p>Generate comprehensive profitability reports with revenue, cost, and margin analysis</p>
                    </div>
                    
                    <group>
                        <group name="date_filters" string="Date Range">
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>
                        <group name="other_filters" string="Additional Filters">
                            <field name="state"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="customer_filter" string="Customer Filter">
                            <field name="partner_ids" widget="many2many_tags" 
                                   placeholder="Leave empty for all customers"
                                   options="{'no_create': True}"/>
                        </group>
                        <group name="product_filter" string="Product Filter">
                            <field name="categ_ids" widget="many2many_tags"
                                   placeholder="Leave empty for all categories"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                
                <footer>
                    <button name="action_generate_report" type="object" 
                            string="Generate PDF Report" class="btn-primary"/>
                    <button name="action_generate_excel" type="object" 
                            string="Export to Excel" class="btn-secondary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_sales_profitability_wizard" model="ir.actions.act_window">
        <field name="name">Sales Profitability Report</field>
        <field name="res_model">sales.profitability.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
    </record>

</odoo>